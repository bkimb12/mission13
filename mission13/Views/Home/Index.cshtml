@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>


<div class="row">
    <div class="col-3">

        <!--Tag Helpers-->
        <h4>Sort Bowlers by Team:</h4>
        <div team-blah="" page-action="Index" teams="@ViewBag.Teams" current-id="@ViewBag.CurrentTeamID" page-classes-enabled="true"
                page-class="btn w-100 mb-2" page-class-normal="btn-outline-dark" page-class-selected="btn-primary"></div>
    </div>
    <div class="col">
        @if (ViewBag.CurrentTeamID == 0)
        {
            <a class="btn btn-lg btn-outline-primary float-right" asp-action="AddBowler">Add a Bowler</a>
            <br />
            <h3>Bowlers:</h3>
        }
        else
        {
            <a class="btn btn-lg btn-outline-primary float-right" asp-action="AddBowler">Add a Bowler</a>
            <br />
            <h3>Bowlers from Team @ViewBag.Teams[ViewBag.CurrentTeamID - 1].TeamName:</h3>
        }


        <!--Table for Bowlers-->
        <table class="table table-sm table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>First Name</th>
                    <th>Middle Initial</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                    <th>Phone Number</th>
                    <th>Edit This Bowler</th>
                    <th>Delete This Bowler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.BowlerFirstName</td>
                        <td>@b.BowlerMiddleInit</td>
                        <td>@b.BowlerLastName</td>
                        <td>@b.BowlerAddress</td>
                        <td>@b.BowlerCity</td>
                        <td>@b.BowlerState</td>
                        <td>@b.BowlerZip</td>
                        <td>@b.BowlerPhoneNumber</td>

                        <td>
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID"
                               class="btn btn-outline-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="DeleteBowler" asp-route-id="@b.BowlerID"
                               class="btn btn-outline-primary">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>


        </table>
    </div>
    </div>